    <script>
        document.addEventListener('DOMContentLoaded', () => {
          const btn = document.getElementById('themeToggle');
          if (!btn) {
            console.error('Theme toggle button not found: id="themeToggle"');
            return;
          }
          const body = document.body;
        
          // Инициализация: возьмём сохранённую тему или системную
          const saved = localStorage.getItem('site-theme');
          const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
          const initial = saved ? saved : (prefersDark ? 'dark' : 'light');
        
          body.classList.toggle('theme-dark', initial === 'dark');
          body.classList.toggle('theme-light', initial !== 'dark');
        
          function updateButton() {
            const isDark = body.classList.contains('theme-dark');
            btn.textContent = isDark ? 'Светлая тема' : 'Тёмная тема';
            btn.setAttribute('aria-pressed', String(isDark));
          }
          updateButton();
        
          btn.addEventListener('click', () => {
            const isDark = body.classList.toggle('theme-dark');
            body.classList.toggle('theme-light', !isDark);
            localStorage.setItem('site-theme', isDark ? 'dark' : 'light');
            updateButton();
          });
        });
        </script>
